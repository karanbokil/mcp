{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "ECR Repository for Application",
  "Parameters": {
    "AppName": {
      "Type": "String",
      "Description": "Name of the application"
    }
  },
  "Resources": {
    "ECRPushPullRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            },
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {"Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root"}
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "RoleName": {"Fn::Sub": "${AppName}-ecr-role"},
        "ManagedPolicyArns": [],
        "Path": "/"
      }
    },
    "ECRRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {"Fn::Sub": "${AppName}-repo"},
        "EmptyOnDelete": true,
        "LifecyclePolicy": {
          "LifecyclePolicyText": "{\"rules\":[{\"rulePriority\":1,\"description\":\"Keep only the latest 5 images\",\"selection\":{\"tagStatus\":\"any\",\"countType\":\"imageCountMoreThan\",\"countNumber\":5},\"action\":{\"type\":\"expire\"}}]}"
        },
        "RepositoryPolicyText": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowPushPull",
              "Effect": "Allow",
              "Principal": {
                "AWS": {"Fn::GetAtt": ["ECRPushPullRole", "Arn"]}
              },
              "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:BatchCheckLayerAvailability",
                "ecr:PutImage",
                "ecr:InitiateLayerUpload",
                "ecr:UploadLayerPart",
                "ecr:CompleteLayerUpload"
              ]
            }
          ]
        }
      },
      "DeletionPolicy": "Delete"
    }
  },
  "Outputs": {
    "ECRRepositoryName": {
      "Description": "ECR Repository Name",
      "Value": {"Fn::Sub": "${AppName}-repo"}
    },
    "ECRRepositoryURI": {
      "Description": "ECR Repository URI",
      "Value": {"Fn::Sub": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/${AppName}-repo"}
    },
    "ECRPushPullRoleArn": {
      "Description": "ARN of the ECR Push/Pull role",
      "Value": {"Fn::GetAtt": ["ECRPushPullRole", "Arn"]}
    }
  }
}
